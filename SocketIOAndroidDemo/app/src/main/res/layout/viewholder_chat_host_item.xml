<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="16dp"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin">

    <TextView
        android:id="@+id/recycler_view_chat_host_item_top_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@color/colorSecondaryText"
        android:textSize="12sp"
        android:visibility="gone"/>

    <RelativeLayout
        android:id="@+id/recycler_view_chat_host_item_center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/recycler_view_chat_host_item_top_time">

        <ImageView
            android:id="@+id/recycler_view_chat_host_item_headPortrait"
            android:layout_width="@dimen/chat_headPortrait_width"
            android:layout_height="@dimen/chat_headPortrait_width"
            android:layout_alignParentRight="true"/>

        <LinearLayout
            android:id="@+id/recycler_view_chat_host_item_field_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingRight="@dimen/chat_content_margin"
            android:layout_toLeftOf="@+id/recycler_view_chat_host_item_headPortrait">


            <TextView
                android:id="@+id/recycler_view_chat_host_item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="@color/colorPrimaryText"
                android:layout_gravity="right"
                android:textSize="12sp"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp">

                <TextView
                    android:id="@+id/recycler_view_chat_host_item_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/bg_item_chat_host"
                    android:gravity="center_vertical"
                    android:lineSpacingExtra="2dp"
                    android:minHeight="@dimen/chat_content_min_height"
                    android:paddingBottom="8dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:paddingTop="8dp"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"/>

                <ProgressBar
                    android:id="@+id/recycler_view_chat_host_item_content_progressbar"
                    android:layout_width="@dimen/chat_progress_width"
                    android:layout_height="@dimen/chat_progress_width"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="4dp"
                    android:layout_toLeftOf="@+id/recycler_view_chat_host_item_text"
                    android:visibility="gone"/>

            </RelativeLayout>

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/recycler_view_chat_host_item_field_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/recycler_view_chat_host_item_headPortrait">


            <ImageView
                android:id="@+id/recycler_view_chat_host_item_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/chat_content_margin"
                android:gravity="center_vertical"
                android:minHeight="@dimen/chat_content_min_height"/>

            <ProgressBar
                android:id="@+id/recycler_view_chat_host_item_image_progressbar"
                android:layout_width="@dimen/chat_progress_width"
                android:layout_height="@dimen/chat_progress_width"
                android:layout_centerVertical="true"
                android:layout_marginRight="4dp"
                android:layout_toLeftOf="@+id/recycler_view_chat_host_item_image"
                android:visibility="gone"/>


        </RelativeLayout>

    </RelativeLayout>


    <TextView
        android:id="@+id/recycler_view_chat_host_item_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/recycler_view_chat_host_item_center"
        android:layout_marginRight="66dp"
        android:layout_marginTop="4dp"
        android:gravity="right"
        android:textSize="10sp"
        android:visibility="gone"/>


</RelativeLayout>