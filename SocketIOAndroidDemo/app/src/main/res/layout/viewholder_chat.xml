<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin">

    <ImageView
        android:id="@+id/chat_view_holder_img"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        app:srcCompat="@drawable/ic_settings_24dp"/>


    <TextView
        android:id="@+id/chat_view_holder_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="14dp"
        android:text="TextView"
        android:textSize="10sp"/>

    <TextView
        android:id="@+id/chat_view_holder_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="14dp"
        android:layout_toLeftOf="@id/chat_view_holder_time"
        android:layout_toRightOf="@id/chat_view_holder_img"
        android:maxLines="1"
        android:text="TextView"
        android:textColor="@color/colorPrimaryText"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/chat_view_holder_body"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/chat_view_holder_name"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="6dp"
        android:layout_toRightOf="@id/chat_view_holder_img"
        android:maxLines="1"
        android:text="TextView"
        android:textSize="14sp"/>


</RelativeLayout>